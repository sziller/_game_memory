#: kivy 2.1.0
#:set fn_button_big "./fonts/Ubuntu-B.ttf"
#:set fs_button_big 100
#:set fn_button "./fonts/Ubuntu-B.ttf"
#:set fs_button 20
#:set clr_wallet_bck (0.137, 0.145, 0.2, 1)

## ------------------------------------------------------------------
## transitions imported for screenchanges:
## ------------------------------------------------------------------
#:import NoTransition kivy.uix.screenmanager.NoTransition
## -----------------------------------------------------------------------------
#:import CardTransition kivy.uix.screenmanager.CardTransition
#:import FadeTransition kivy.uix.screenmanager.FadeTransition
#:import FallOutTransition kivy.uix.screenmanager.FallOutTransition
#:import RiseInTransition kivy.uix.screenmanager.RiseInTransition
#:import SlideTransition kivy.uix.screenmanager.SlideTransition
#:import SwapTransition kivy.uix.screenmanager.SwapTransition
#:import WipeTransition kivy.uix.screenmanager.WipeTransition

<GameScreenManager@ScreenManager>:
    transition: FadeTransition()

<OperationAreaBox@BoxLayout>:
    spacing: 5
    padding: 20, 0, 20, 0
    orientation: "vertical"

GameScreenManager:
    id: "ThisIsYourROOTWidget"
    canvas.before:
        Color:
            rgba: clr_wallet_bck
        Rectangle:
            pos: self.pos
            size: self.size
            # source: background_image
    ScreenIntro:
        id: screen_intro
    ScreenGame:
        id: screen_game


<ScreenIntro@Screen>:
    name: "screen_intro"
    InScreenWindow:  ## Screen class is a widget, it is not filled up automatically
        OpAreaIntro:
            size_hint: 1, 1
            id: oparea_intro

<ScreenGame@Screen>:
    name: "screen_game"
    InScreenWindow:  ## Screen class is a widget, it is not filled up automatically
        LabelTitle:
            size_hint: 1, 0.2
            id: board
            text: "Title"
        OpAreaGame:
            size_hint: 1, 0.8
            id: oparea_game

<OpAreaIntro@OperationAreaBox>:
    Label:
        text: "Welcome"
    BoxLayout:
        orianetation: "horizontal"
        Button:
            id: gamesize_4x3
            text: "small"
            on_release: root.on_release_size(self)
        Button:
            id: gamesize_6x4
            text: "medium"
            on_release: root.on_release_size(self)
        Button:
            id: gamesize_8x5
            text: "large"
            on_release: root.on_release_size(self)
    Button:
        text: "Play"
        on_release: root.on_release_to_game() 

<OpAreaGame@OperationAreaBox>:
    MemoryGame:
        id: game_memory
        size_hint: 1, 1



<InScreenWindow@BoxLayout>:
    orientation: "vertical"

<ButtonMemory@Button>:
    font_name: fn_button_big
    font_size: fs_button_big
    color: (1, 0, 0, 1)

<MainLayout@BoxLayout>:
    orientation: "vertical"
    BoxLayout:
        size_hint: 1, 0.2
        LabelTitle:
            id: board
            text: "Title"
    MemoryGame:
        size_hint: 1, 0.8

<LabelTitle@Label>:
    font_name: fn_button
    font_size: fs_button
    color: (1, 0, 0, 1)
